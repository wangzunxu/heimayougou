.search {
  background:rgb(239,239,239);
  padding:20rpx
}
.search-input {
  background: #fff;
  height: 60rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 4px;
  color: #999;
  font-size: 14px;
}
.search-input icon {
  margin-right: 5px;
}
.tab {
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #eee;
}
.goods-item {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}
.goods-item image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}
.goods-item .content {
  flex: 1;
  padding-left: 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods-item .content .title {
  overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.goods-item .content .price {
  color: red;
  font-size: 22px;
}
.goods-item .content text {
  font-size: 12px;
}