<view class="container">
  <!-- 顶部搜索栏 -->
  <navigator>
    <view class="search">
      <view class="search-input">
        <icon type="search" size="20" />{{keyword}}
      </view>
    </view>
  </navigator>

  <!-- tab栏头部 -->
  <view class="tab">
    <view wx:for="{{ ['综合','销量','价格'] }}" wx:key="index">{{item}}
    <text wx:if="{{index===2}}" class="iconfont iconpaixu"></text>    
    </view>
  </view>

  <!-- 商品列表 -->
  <view class="list">
    <navigator url="" class="goods-item">
      <image mode="aspectFill" src="https://ol.3dmgame.com/uploads/images/xiaz/2019/0426/1556258485435.png" ></image>
      <view class="content">
        <view class="title">水电费师傅且随疾风前行；分公司电饭锅哈撒给，讲话稿发送到面对疾风吧；</view>
        <view class="price"><text>￥</text>6300</view>
      </view>
    </navigator>
  </view>
</view>