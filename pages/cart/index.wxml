<view class="container">
  <!-- 收货地址 -->
  <view class="address" wx:if="{{address.name}}">
    <view class="address-info">
      <view>收货人：{{address.name}}</view>
      <view class="tel">{{address.tel}}</view>
    </view>

    <view class="address-detail">
      收货地址：{{address.detail}}
    </view>

    <image mode="aspectFill" src="../../images/cart_border@2x.png"></image>
  </view>

  <!-- 获取收货地址 -->
  <view class="address" wx:if="{{!address.name}}" bindtap="handleGetAddress">
    <view class="address-info">
      <view>获取收货地址</view>
    </view>
    <image mode="aspectFill" src="../../images/cart_border@2x.png"></image>
  </view>

  <!-- 购物车商品列表头部 -->
  <view class="goods-list-title">
    <view class="iconfont icon-dianpu"></view>
    优购生活馆
  </view>

  <!-- 商品列表 -->
  <view class="goods-list" wx:for="{{5}}" wx:key="index">
    商品中间项
    <view class="goods-item">
      <icon type="success" color="red"></icon>
      <image mode="aspectFill" src="https://img13.360buyimg.com/mobilecms/s144x144_jfs/t1/58161/29/16186/268929/5dd63725E02948ad8/9a2c25a6855bfb7e.jpg!q70.jpg.webp"></image>

      <!-- 商品右侧信息 -->
      <view class="goods-item-right">
        <view class="goods-title">
          信息商品信息商品
        </view>
        <view class="goods-info">
          <view class="goods-price">
            <text>￥</text>25210
          </view>
          <view class="goods-number">
            <view class="calc-button">-</view>
            <input value="1"></input>
            <view class="calc-button">+</view>
          </view>
        </view>
      </view>
    </view>

  <!-- 结算 -->
    <view class="checkout">
      <view class="allselect">
        <icon type="success" color="red"></icon>
        全选
      </view>
      <view class="allprice">
        <view class="allprice-top">
          合计：
          <text><!-- text中只能嵌套text -->
          <text>￥</text>151221          
          </text>
        </view>
        <view class="allprice-bottom">
          包含运费
        </view>
      </view>
        <view class="checkout-btn">结算</view>
    </view>
  </view>
</view>