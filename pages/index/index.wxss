.search {
  background:#eb4450;
  padding:20rpx
}
.search-input {
  background: #fff;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 4px;
  color: #999;
  font-size: 14px;
}
.search-input icon {
  margin-right: 5px;
}
.menus {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 20rpx 0;
}
.menus image {
  width: 128rpx;
  height: 140rpx;
}
.floor {
  margin-bottom: 20rpx;
}
.floor-title {
  width: 100%;
  height: 60rpx;
}
.floor-content {
  display: flex;
  justify-content: space-between;
  padding: 15rpx;
}
.floor-content-left {
  margin-right: 12rpx;
}
.floor-content-left image{
  width: 232rpx;
  height: 386rpx;
}
.floor-content-right {
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap; 
}
.floor-content-right image {
  width: 232rpx;
  height: 188rpx;
}
.floor + .floor .floor-content-right image {
  width: 193rpx;
}
.floor + .floor .floor-content-right image:nth-child(3n+1) {
  width: 273rpx;
} 