<view class="container">
  <!-- 搜索栏 -->
  <view class="search-wrapper">
    <view class="search">
      <view class="search-input">
        <icon type="search" size="20"></icon>
        <!-- bindinput监听输入框事件，bindconfirm进入触发事件 -->
        <input placeholder="请输入您想要的商品" bindinput="handleInput" value="{{inputValue}}" bindconfirm="handleEnter" bindblur="handleBlur"></input>
      </view>
      <view class="cancel-button" wx:if="{{inputValue}}" bindtap="handleClick">取消</view>

      <!-- 搜索建议列表 -->
      <view class="recommend" wx:if="{{inputValue}}">
        <navigator url="" wx:for="{{recommend}}" wx:key="index">
          {{item.goods_name}}
        </navigator>
      </view>
    </view>
  </view>

  <!-- 历史搜索 -->
  <view class="history-title">
    <view class="title-header">历史搜索</view>
    <icon type="clear" size="20" bindtap="handleClear"></icon>
  </view>

  <!-- 历史搜索列表 -->
  <view class="history-list">
    <navigator class="history-item" wx:for="{{history}}" wx:key="index" url="/pages/goods_list/index?keyword={{item}}">
    {{item}}
    </navigator>
  </view>
</view>