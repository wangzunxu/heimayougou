<view class="container">
  <!-- 搜索栏 -->
  <view class="search-wrapper">
    <view class="search">
      <view class="search-input">
        <icon type="search" size="20"></icon>
        <input placeholder="请输入您想要的商品" bindinput="handleInput" value="{{isShow}}"></input>
      </view>
      <view class="cancel-button" wx:if="{{isShow}}" bindtap="handleClick">取消</view>

      <!-- 搜索建议列表 -->
      <view class="recommend" wx:if="{{isShow}}">
        <navigator url="" wx:for="{{recommend}}" wx:key="index">
          {{item.goods_name}}
        </navigator>
      </view>
    </view>
  </view>

  <!-- 历史搜索 -->
  <view class="history-title">
    <view class="title-header">历史搜索</view>
    <icon type="clear" size="20"></icon>
  </view>

  <!-- 历史搜索列表 -->
  <view class="history-list">
    <view class="history-item">小米</view>
    <view class="history-item">苹果</view>
    <view class="history-item">三星</view>
    <view class="history-item">魅族</view>
  </view>
</view>